<div class="registration-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.1), rgba(0,36,61,0.6) 50%), url(<%= image_path 'endoftheworld.jpg'%>)">
  <div class="registration-container">
    <h2>Your Bunker </h2>

    <%= simple_form_for @bunker do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class: 'request-button' %>
    <% end %>
  </div>
</div>


