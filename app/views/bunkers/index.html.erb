<div class="banner-index-content">
  <h5>The possibilities are endless.</h5>
  <h6>Find the bunker right for you.</h6>
  <h6>Breakfast Included.</h6>
  <div class="search">
    <%= render  "/shared/search_form" %>
  </div>
</div>

<div class="container-map-cards">
  <div class="map-container">
    <%= render "shared/map" %>
  </div>

  <!-- <div class="container"> -->
  <div class="cards-container">
    <div class="row">
      <% @bunkers.each do |bunker| %>
        <div class="col-xs-4">
          <div class="flat-card">
            <%= link_to bunker_path(bunker.id) do %>
            <div class="flat-card-image" style="background-image: url(<%= cl_image_path bunker.photo%>)"></div>
            <% end %>
            <div class="flat-card-content">
              <div class="flat-card-title">
                <strong><%= bunker.name %></strong>
              </div>
              <div>
               <i class="fas fa-map-marker-alt"></i>  <%= bunker.address %>
              </div>
              <div>
               <i class="fas fa-dollar-sign"></i> <%= number_with_delimiter(bunker.price, :delimiter => ',') %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

