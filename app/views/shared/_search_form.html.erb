<%= form_tag(bunkers_path, method: "get") do %>
  <%= label_tag( "Search by") %>
  <%= text_field_tag :query_address,  
        params[:query],   
        placeholder: "Search for location" 
  %>
  <%= text_field_tag :min_price, 
        params[:query],   
        placeholder: "Min Price" 
  %>
  <%= text_field_tag :max_price,
        params[:query],   
        placeholder: "Max Price" 
  %>
  <%= submit_tag("Search", class: "search", :style => "display: none;") %>
<% end %>
